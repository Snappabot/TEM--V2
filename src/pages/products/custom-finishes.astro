---
import Layout from '../../layouts/Layout.astro';
import CustomCursor from '../../components/CustomCursor';
import ScrollProgress from '../../components/ScrollProgress';
import AnimatedFooter from '../../components/AnimatedFooter';

const product = {
  name: 'Custom Finishes',
  tagline: 'Your Vision, Our Craft',
  description: 'One-of-a-kind finishes tailored to your exact specifications and design vision.',
  image: '/TEM-website/images/products/custom-finishes.png',
  customizable: [
    'Venetian Plaster Marbellino',
    'Trowelled Metallics',
    'Hemp Earthen Rammed Render',
    'Antique Stucco',
    'Polished Tadelakt Plaster'
  ],
  features: [
    'Fully customizable to your vision',
    'Combine multiple product ranges',
    'Unique colour matching',
    'Bespoke textures and patterns',
    'Work directly with our master craftsmen',
    'Suitable for any project size'
  ],
  benefits: [
    'Truly unique finish for your space',
    'Expert guidance throughout the process',
    'No design limitation',
    'Stand out from standard finishes',
    'Collaborative creative process'
  ],
  gallery: [
    { src: '/TEM-website/images/products/custom-finishes/Custom+finish+fractured+plaster.png', title: 'Fractured Plaster' },
    { src: '/TEM-website/images/products/custom-finishes/Custom+finish+volcanic+rock.png', title: 'Volcanic Rock' },
    { src: '/TEM-website/images/products/custom-finishes/Custom+finish+moroccan.png', title: 'Moroccan' },
    { src: '/TEM-website/images/products/custom-finishes/Custom+finish+bar.png', title: 'Bar Feature' },
    { src: '/TEM-website/images/products/custom-finishes/Custom+finish+ceiling.png', title: 'Ceiling' },
    { src: '/TEM-website/images/products/custom-finishes/State+of+decay+1.png', title: 'State of Decay' },
  ]
};
---

<Layout title={`${product.name} | Troweled Earth Melbourne`}>
  <CustomCursor client:load />
  <ScrollProgress client:load />

  <section class="relative h-[70vh] min-h-[500px] flex items-end bg-[#0a0a0a] overflow-hidden">
    <div class="absolute inset-0">
      <img src={product.image} alt={product.name} class="w-full h-full object-cover opacity-60" />
      <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] via-[#0a0a0a]/50 to-transparent" />
    </div>
    <div class="relative z-10 max-w-7xl mx-auto px-6 pb-16 w-full">
      <a href="/TEM-website/#finishes" class="inline-flex items-center gap-2 text-white/60 hover:text-white mb-6 transition-colors">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Finishes
      </a>
      <span class="text-[#8b7355] text-sm uppercase tracking-[0.3em] mb-4 block">{product.tagline}</span>
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white tracking-tight">{product.name}</h1>
      <p class="text-xl text-white/70 mt-6 max-w-2xl">{product.description}</p>
    </div>
  </section>

  <!-- Customizable Products -->
  <section class="py-24 bg-[#1a1a1a]">
    <div class="max-w-7xl mx-auto px-6">
      <span class="text-[#8b7355] text-sm uppercase tracking-[0.3em] mb-4 block">Available for Customization</span>
      <h2 class="text-4xl font-bold text-white mb-12">Products We Customize</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {product.customizable.map(item => (
          <div class="bg-white/5 border border-white/10 p-8 rounded-lg hover:bg-white/10 transition-colors">
            <h3 class="text-xl font-bold text-white">{item}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-24 bg-[#f5f5f0]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16">
        <div>
          <span class="text-[#8b7355] text-sm uppercase tracking-[0.3em] mb-4 block">Features</span>
          <h2 class="text-4xl font-bold text-[#1a1a1a] mb-8">What We Offer</h2>
          <ul class="space-y-4">
            {product.features.map(feature => (
              <li class="flex items-start gap-4">
                <svg class="w-6 h-6 text-[#8b7355] flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-[#1a1a1a]/70">{feature}</span>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <span class="text-[#8b7355] text-sm uppercase tracking-[0.3em] mb-4 block">Why Choose</span>
          <h2 class="text-4xl font-bold text-[#1a1a1a] mb-8">Benefits</h2>
          <ul class="space-y-4">
            {product.benefits.map(benefit => (
              <li class="flex items-start gap-4">
                <svg class="w-6 h-6 text-[#8b7355] flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-[#1a1a1a]/70">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery -->
  <section class="py-24 bg-[#0a0a0a]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-12">
        <span class="text-[#8b7355] text-sm uppercase tracking-[0.3em] mb-4 block">Inspiration</span>
        <h2 class="text-4xl font-bold text-white">Custom Creations</h2>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {product.gallery.map((img) => (
          <div class="group relative aspect-square overflow-hidden bg-[#1a1a1a]">
            <img 
              src={img.src} 
              alt={img.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
              <span class="text-white font-medium">{img.title}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-[#1a1a1a]">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">Have a Vision?</h2>
      <p class="text-xl text-white/60 mb-8">Talk to us about creating a unique custom finish for your project.</p>
      <a href="/TEM-website/#contact" class="inline-flex items-center gap-3 px-8 py-4 bg-[#8b7355] text-white font-medium uppercase tracking-widest text-sm hover:bg-[#a68b6a] transition-colors">
        Start Your Custom Project
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>

  <AnimatedFooter client:visible />
</Layout>
