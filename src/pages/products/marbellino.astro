---
import Layout from '../../layouts/Layout.astro';
import CustomCursor from '../../components/CustomCursor';
import ScrollProgress from '../../components/ScrollProgress';
import AnimatedFooter from '../../components/AnimatedFooter';

const product = {
  name: 'Marbellino',
  tagline: 'Stone-Like Venetian Plaster',
  description: 'High-performance decorative coating creating surfaces with elevated aesthetic value and a stone-like, slightly marbled effect. Suitable for modern and classic architectural designs — the only Troweled Earth product approved for floor applications.',
  image: '/TEM--V2/images/products/marbellino/Marbellino+curved+sunset.jpg',
  features: [
    'Stone-like, marbled aesthetic with subtle undulations',
    'Suitable for walls, ceilings, and internal floors',
    '4-5 coat system for superior durability and depth',
    'Interior and exterior use — including bathrooms',
    'Low VOC — Green Star compliant',
    'Non-combustible (AS 1530.1 certified)',
    'Custom colours available',
    '7-Year Limited Warranty'
  ],
  benefits: [
    'Unique floor application capability — rare among decorative plasters',
    'Stone look without the weight or cost of natural stone',
    'Each wall is unique — obvious contrast and colour movement',
    'Highly water resistant and UV stable',
    'Flexible — resists web cracking unlike traditional plasters',
    'Repairable and patchable with no visible marks',
    'Made in Western Australia'
  ],
  gallery: [
    { src: '/TEM--V2/images/products/marbellino/Marbellino+state+of+kin.jpg', title: 'State of Kin' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+spiral+stair.jpg', title: 'Spiral Stair' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+white+curves.jpg', title: 'White Curves' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+outdoor+arches.jpg', title: 'Outdoor Arches' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+hallway+art.jpg', title: 'Hallway' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+stairwell+art.jpg', title: 'Stairwell' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+angular+exterior.jpg', title: 'Angular Exterior' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+kitchen.png', title: 'Kitchen' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+ivory+shower.jpg', title: 'Ivory — Shower' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+ivory+arch+niche.jpg', title: 'Ivory — Arch Niche' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+common+grey+half.jpg', title: 'Common Grey Half' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+common+grey+stairwell+1.jpg', title: 'Common Grey — Stairwell' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+common+grey+stairwell+2.jpg', title: 'Common Grey — Stairwell II' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+common+grey+stairwell+3.jpg', title: 'Common Grey — Feature Wall' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+common+grey+hallway.jpg', title: 'Common Grey — Hallway' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+exterior+jarrad.jpg', title: 'Concrete Dark — Exterior' },
    { src: '/TEM--V2/images/products/marbellino/bathroom+marbellino+1.png', title: 'Bathroom' },
    { src: '/TEM--V2/images/products/marbellino/Marbellino+shop+in+smokey+grey.png', title: 'Commercial' },
  ]
};
---

<Layout title={`${product.name} | Troweled Earth Melbourne`}>
  <CustomCursor client:load />
  <ScrollProgress client:load />

  <!-- Hero -->
  <section class="relative h-[70vh] min-h-[500px] flex items-end bg-[#0a0a0a] overflow-hidden">
    <div class="absolute inset-0">
      <img src={product.image} alt={product.name} class="w-full h-full object-cover opacity-60" />
      <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] via-[#0a0a0a]/50 to-transparent" />
    </div>
    <div class="relative z-10 max-w-7xl mx-auto px-6 pb-16 w-full">
      <a href="/TEM--V2/#finishes" class="inline-flex items-center gap-2 text-white/60 hover:text-white mb-6 transition-colors">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Finishes
      </a>
      <span class="text-[#8b7355] text-sm uppercase tracking-[0.3em] mb-4 block">{product.tagline}</span>
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white tracking-tight">{product.name}</h1>
      <p class="text-xl text-white/70 mt-6 max-w-2xl">{product.description}</p>
    </div>
  </section>

  <!-- Features -->
  <section class="py-24 bg-[#f5f5f0]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16">
        <div>
          <span class="text-[#8b7355] text-sm uppercase tracking-[0.3em] mb-4 block">Features</span>
          <h2 class="text-4xl font-bold text-[#1a1a1a] mb-8">Key Features</h2>
          <ul class="space-y-4">
            {product.features.map(feature => (
              <li class="flex items-start gap-4">
                <svg class="w-6 h-6 text-[#8b7355] flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-[#1a1a1a]/70">{feature}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div>
          <span class="text-[#8b7355] text-sm uppercase tracking-[0.3em] mb-4 block">Why Choose</span>
          <h2 class="text-4xl font-bold text-[#1a1a1a] mb-8">Benefits</h2>
          <ul class="space-y-4">
            {product.benefits.map(benefit => (
              <li class="flex items-start gap-4">
                <svg class="w-6 h-6 text-[#8b7355] flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="text-[#1a1a1a]/70">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery -->
  <section class="py-24 bg-[#0a0a0a]">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-12">
        <span class="text-[#8b7355] text-sm uppercase tracking-[0.3em] mb-4 block">Inspiration</span>
        <h2 class="text-4xl font-bold text-white">Project Gallery</h2>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {product.gallery.map((img) => (
          <div class="group relative aspect-square overflow-hidden bg-[#1a1a1a]">
            <img 
              src={img.src} 
              alt={img.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
              <span class="text-white font-medium">{img.title}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-[#1a1a1a]">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">Interested in {product.name}?</h2>
      <p class="text-xl text-white/60 mb-8">Get in touch to discuss your project and receive a quote.</p>
      <a href="/TEM--V2/#contact" class="inline-flex items-center gap-3 px-8 py-4 bg-[#8b7355] text-white font-medium uppercase tracking-widest text-sm hover:bg-[#a68b6a] transition-colors">
        Get a Quote
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>

  <AnimatedFooter client:visible />
</Layout>
