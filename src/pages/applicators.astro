---
import Layout from '../layouts/Layout.astro';
import AnimatedFooter from '../components/AnimatedFooter';
---

<Layout title="Find an Applicator | Troweled Earth Melbourne">

  <!-- Hero Section -->
  <section class="relative h-[50vh] min-h-[400px] flex items-center justify-center bg-[#0a0a0a] overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-[#0a0a0a]/80 z-10"></div>
    <div class="relative z-20 text-center px-6">
      <span class="text-[#8b7355] text-sm uppercase tracking-[0.3em] mb-4 block">Certified Professionals</span>
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white tracking-tight">
        Applicators
      </h1>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-24 bg-[#f5f5f0]">
    <div class="max-w-4xl mx-auto px-6">
      
      <!-- Intro -->
      <div class="text-center mb-16">
        <p class="text-2xl md:text-3xl text-[#1a1a1a] leading-relaxed font-light mb-8">
          Looking for a trained Troweled Earth applicator in your area?
        </p>
        <p class="text-lg text-[#1a1a1a]/70 leading-relaxed max-w-2xl mx-auto">
          Our network of certified applicators have completed specialised training 
          to ensure your project is finished to the highest standard. Fill out the 
          form below and we'll connect you with an approved professional.
        </p>
      </div>

      <!-- Request Form -->
      <div class="bg-white rounded-lg shadow-lg p-8 md:p-12">
        <h2 class="text-2xl md:text-3xl font-bold text-[#1a1a1a] mb-8 text-center">
          Request Applicator Information
        </h2>
        
        <form id="applicator-form" class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-medium text-[#1a1a1a]/70 uppercase tracking-wider mb-2">
                Your Name *
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                class="w-full px-4 py-3 border border-[#1a1a1a]/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#8b7355] focus:border-transparent transition-all bg-[#f5f5f0]"
                placeholder="John Smith"
              />
            </div>
            
            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-[#1a1a1a]/70 uppercase tracking-wider mb-2">
                Email Address *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-[#1a1a1a]/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#8b7355] focus:border-transparent transition-all bg-[#f5f5f0]"
                placeholder="john@example.com"
              />
            </div>
          </div>
          
          <div class="grid md:grid-cols-2 gap-6">
            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-medium text-[#1a1a1a]/70 uppercase tracking-wider mb-2">
                Phone Number
              </label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                class="w-full px-4 py-3 border border-[#1a1a1a]/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#8b7355] focus:border-transparent transition-all bg-[#f5f5f0]"
                placeholder="0400 000 000"
              />
            </div>
            
            <!-- Location -->
            <div>
              <label for="location" class="block text-sm font-medium text-[#1a1a1a]/70 uppercase tracking-wider mb-2">
                Project Location *
              </label>
              <input 
                type="text" 
                id="location" 
                name="location" 
                required
                class="w-full px-4 py-3 border border-[#1a1a1a]/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#8b7355] focus:border-transparent transition-all bg-[#f5f5f0]"
                placeholder="Suburb, VIC"
              />
            </div>
          </div>
          
          <!-- Message -->
          <div>
            <label for="message" class="block text-sm font-medium text-[#1a1a1a]/70 uppercase tracking-wider mb-2">
              Project Details
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="4"
              class="w-full px-4 py-3 border border-[#1a1a1a]/20 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#8b7355] focus:border-transparent transition-all resize-none bg-[#f5f5f0]"
              placeholder="Tell us about your project - size, finish type, timeline, etc."
            ></textarea>
          </div>
          
          <!-- Submit Button -->
          <div class="text-center pt-4">
            <button 
              type="submit"
              class="inline-flex items-center gap-3 px-10 py-5 bg-[#1a1a1a] text-white font-medium uppercase tracking-widest text-sm hover:bg-[#8b7355] transition-colors"
            >
              Submit Request
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </button>
          </div>
        </form>
        
        <!-- Success Message (hidden by default) -->
        <div id="success-message" class="hidden text-center py-12">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-[#1a1a1a] mb-4">Request Received!</h3>
          <p class="text-[#1a1a1a]/70">We'll be in touch shortly with applicator recommendations for your area.</p>
        </div>
      </div>

      <!-- Why Choose Certified -->
      <div class="grid md:grid-cols-3 gap-8 mt-16">
        <div class="text-center p-6">
          <div class="w-14 h-14 bg-[#8b7355]/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-[#8b7355]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-[#1a1a1a] mb-2">Certified Training</h3>
          <p class="text-[#1a1a1a]/60 text-sm">All applicators complete our hands-on training program</p>
        </div>
        
        <div class="text-center p-6">
          <div class="w-14 h-14 bg-[#8b7355]/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-[#8b7355]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-[#1a1a1a] mb-2">Quality Guaranteed</h3>
          <p class="text-[#1a1a1a]/60 text-sm">Consistent results backed by our quality standards</p>
        </div>
        
        <div class="text-center p-6">
          <div class="w-14 h-14 bg-[#8b7355]/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-[#8b7355]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-[#1a1a1a] mb-2">Local Network</h3>
          <p class="text-[#1a1a1a]/60 text-sm">Growing network of professionals across Australia</p>
        </div>
      </div>

    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-[#1a1a1a]">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">Become an Applicator</h2>
      <p class="text-xl text-white/60 mb-8">Interested in joining our network? Learn about our training program.</p>
      <a 
        href="/training" 
        class="inline-flex items-center gap-3 px-8 py-4 bg-[#8b7355] text-white font-medium uppercase tracking-widest text-sm hover:bg-[#a68b6a] transition-colors"
      >
        View Training
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>

  <AnimatedFooter client:visible />
</Layout>

<script>
  // Simple form handling (can be enhanced with actual backend later)
  const form = document.getElementById('applicator-form');
  const successMessage = document.getElementById('success-message');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Get form data
    const formData = new FormData(form as HTMLFormElement);
    const data = Object.fromEntries(formData);
    
    // For now, just show success message
    // TODO: Connect to backend/email service
    console.log('Form submitted:', data);
    
    // Hide form, show success
    (form as HTMLFormElement).classList.add('hidden');
    successMessage?.classList.remove('hidden');
  });
</script>
